local distro_check = import "../../../configs/distro_check.libjsonnet";
local desktop_packages = import "categories/desktop.libjsonnet";
local product_soc = import "../../../configs/product_soc.libjsonnet";
local gdm = import "gdm.libjsonnet";

function(suite,
         product,
         temp_dir,
         vendor_packages,
         linux_override,
         u_boot_override,
) desktop_packages(suite,
                product,
                temp_dir,
                vendor_packages,
                linux_override,
                u_boot_override,
) + {
    mmdebstrap+: {
        packages+:
        [
            "accountwizard",
            "bluedevil",
            "dragonplayer",
            "kamera",
            "kde-config-plymouth",
            "kde-config-screenlocker",
            "kde-config-sddm",
            "kdeconnect",
            "khotkeys",
            "kinfocenter",
            "kio-extras",
            "konqueror",
            "kscreen",
            "kup-backup",
            "kwin-x11",
            "libkf5kdelibs4support5",
            "libkf5kdelibs4support5-bin",
            "phonon4qt5-backend-gstreamer",
            "phonon4qt5settings",
            "plasma-discover",
            "plasma-nm",
            "powerdevil",
            "print-manager",
            "qtvirtualkeyboard-plugin",
            "qml-module-org-kde-newstuff",
            "qml-module-qt-labs-platform",
            "radxa-desktop-branding",
            "sddm-theme-breeze",
            "sonnet-plugins",
            "systemsettings",
            "yakuake",
            "xdg-desktop-portal-kde",
        ] +

(if distro_check(suite) == "debian"
then
        [
            "task-kde-desktop",
        ]
else if distro_check(suite) == "ubuntu"
then
        [
            "kubuntu-desktop",
        ]
else
        []
) +

(if suite != "focal"
then
        [
            "kde-config-systemd",
        ]
else
        []
) +

(if suite == "bookworm"
then
        // Install Debian 12 packages
        [
            "plasma-workspace-wayland",
            "qml-module-org-kde-pipewire",
        ]
else
        []
),
    },
} + (if suite == "bookworm" && std.startsWith(product_soc(product), "rk358")
then
    // Debian 12's sddm has issue handling screen hotplug, as well as screen wake up
    // https://applink.feishu.cn/client/message/link/open?token=AmY%2FRdMxxQABZoS475OOwAQ%3D
    gdm()
else
    {}
)
